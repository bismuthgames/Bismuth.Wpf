<UserControl x:Class="Bismuth.Wpf.Demo.Views.GraphControlDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bismuth.Wpf.Demo.Views"
             xmlns:bm="http://schemas.bismuth.dk/winfx/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <bm:GraphControl ItemsSource="{Binding Nodes}" Background="White">
        <bm:GraphControl.ItemContainerStyle>
            <Style TargetType="{x:Type bm:GraphNode}"
                   BasedOn="{StaticResource {x:Type bm:GraphNode}}">
                <Setter Property="bm:GraphPanel.X" Value="{Binding X}" />
                <Setter Property="bm:GraphPanel.Y" Value="{Binding Y}" />
            </Style>
        </bm:GraphControl.ItemContainerStyle>
        <bm:GraphControl.ItemTemplate>
            <DataTemplate>
                <Border Background="Red" Padding="20">
                    <TextBlock Text="{Binding Name}" />
                </Border>
            </DataTemplate>
        </bm:GraphControl.ItemTemplate>
    </bm:GraphControl>
</UserControl>
