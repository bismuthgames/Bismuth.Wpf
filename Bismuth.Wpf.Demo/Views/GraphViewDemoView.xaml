    <bm:GraphView Background="White">
        <bm:GraphView.Connections>
            <bm:GraphConnection>
                <Border Background="Blue" Padding="4">
                    <TextBlock Text="Conn 1" />
                </Border>
            </bm:GraphConnection>
            <bm:GraphConnection>
                <Border Background="Pink" Padding="4">
                    <TextBlock Text="Conn 2" />
                </Border>
            </bm:GraphConnection>
        </bm:GraphView.Connections>
        <bm:GraphNode bm:GraphPanel.X="100" bm:GraphPanel.Y="200">
            <Border Background="Red" Padding="20">
                <TextBlock Text="Fisk 1" />
            </Border>
        </bm:GraphNode>
        <bm:GraphNode bm:GraphPanel.X="200" bm:GraphPanel.Y="100">
            <Border Background="YellowGreen" Padding="20">
                <TextBlock Text="Fisk 2" />
            </Border>
        </bm:GraphNode>
        <bm:GraphNode bm:GraphPanel.X="400" bm:GraphPanel.Y="200">
            <Border Background="HotPink" Padding="20">
                <TextBlock Text="Fisk 2" />
            </Border>
        </bm:GraphNode>
    </bm:GraphView>

